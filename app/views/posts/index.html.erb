<!-- View for showing all `Post` -->
<div>

  <h1>Blog Posts</h1>
  <div>
  <!-- form for search functunality -->

    <%= form_tag(posts_path, method: :get) do %>
      <%= text_field_tag :search, params[:search]%>
      <%= submit_tag 'Search'%>
    <% end %>

  </div>

  <!-- loop over each post and render title, part of body, and comment counts -->
  <% @posts.each do |post| %>
    <h3><%= post.title %></h3>
    <p><%= post.body.truncate(400) %></p>
    <p><%= link_to "comments (#{post.comments.count})", post_path(post) %></p>
  <% end %>

</div>